/* 整个页面容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* Header区域：返回箭头与导航栏 */
.header {
  position: relative;
  width: 100%;
  background-color: #fff;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

/* 固定导航栏 */
.header.fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding-top: 6.2vh; /* 适应状态栏高度 */
}

/* 左上角返回箭头 */
.back-arrow {
  position: absolute;
  top: 6.2vh;
  left: 0;
  padding: 20rpx;
  font-size: 36rpx;
  color: #333;
  z-index: 10;
}

/* 页面标题 */
.page-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding-top: 20rpx;
}

/* 导航栏：4个等宽项目 */
.nav-box {
  margin-top: 10rpx; /* 减小顶部间距 */
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666;
}

.nav-item.active {
  color: #007aff;
  border-bottom: 2rpx solid #007aff;
}

/* 内容容器，添加顶部padding以避免被固定导航栏遮挡 */
.content-container {
  flex: 1;
  margin-top: calc(6.2vh + 10rpx); /* 减小顶部间距 */
  padding: 0; /* 移除左右内边距 */
}

/* 主体内容 */
.content {
  flex: 1;
}

/* 标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 20rpx; /* 添加左右边距 */
  display: flex;
  align-items: center;
}

.section-title-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  width: 100%;
  padding: 0;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

/* 表格式表单 */
.table-form {
  width: 100%;
}

/* 修改表格行样式，使其更像图片中的样式 */
.form-row {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0; /* 只保留底部边框 */
  margin-bottom: 0; /* 移除底部间距 */
  border-radius: 0; /* 移除圆角 */
  overflow: hidden;
}

.form-cell {
  padding: 15rpx;
}

/* 修改标签单元格样式 */
.label-cell {
  width: 200rpx;
  background-color: #fff; /* 与输入区域相同的背景色 */
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-right: none; /* 移除右侧边框 */
}

.input-cell {
  flex: 1;
  background-color: #fff;
}

/* 紧急程度样式 */
.emergency-cell {
  display: flex;
  align-items: center;
}

.emergency-wrap {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

/* 修改紧急程度按钮样式 */
.radio-tag {
  border: none; /* 移除边框 */
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e8f8e8; /* 低紧急度为浅绿色 */
  width: 40rpx; /* 设置固定宽度 */
  height: 25rpx; /* 设置固定高度 */
  font-size: 20rpx; /* 设置字体大小 */
}

.radio-tag:nth-child(2) {
  background-color: #faf0e6; /* 中紧急度为浅橙色 */
}

.radio-tag:last-child {
  margin-right: 0;
  background-color: #ffe4e1; /* 高紧急度为浅红色 */
}

.radio-tag.active {
  border: 1rpx solid #007aff;
}

.emergency-icon {
  width: 50rpx;
  height: 30rpx;
  object-fit: contain;
}

/* 维修区域选择 */
.segmented-control {
  display: flex;
  flex-direction: row;
  justify-content: flex-end; /* 使按钮居右 */
  overflow: hidden;
}

/* 修改维修区域按钮样式 - 确保文字横向排列 */
.seg-btn {
  flex: 0; /* 改为0，不再平分空间 */
  text-align: center;
  padding: 0 20rpx; /* 调整内边距，去掉上下内边距 */
  font-size: 24rpx; /* 缩小字体 */
  color: #666;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  margin-right: 15rpx;
  border-radius: 30rpx;
  width: 175rpx; /* 按钮宽度 */
  height: 35rpx; /* 按钮高度 */
  line-height: 35rpx; /* 行高与高度一致，确保文字垂直居中 */
  display: inline-block; /* 使用inline-block而不是flex */
  white-space: nowrap; /* 防止文字换行 */
  overflow: visible; /* 防止文字溢出 */
  text-overflow: ellipsis; /* 文字溢出时显示省略号 */
}

.seg-btn.active {
  color: #fff; /* 白色文字 */
  background-color: #007aff; /* 蓝色背景 */
  border-color: #007aff;
}

/* 输入框样式 */
.input-control {
  height: 40rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  text-align: right; /* 文字居右 */
}

/* 文本域样式 */
.textarea-control {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5; /* 添加浅灰色背景 */
  border-radius: 8rpx; /* 添加圆角 */
  padding: 10rpx; /* 添加内边距 */
  min-height: 300rpx; /* 增加高度 */
}

/* 上传图片区域 */
.upload-area {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.uploaded-images {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0,0,0,0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 修改上传按钮样式 */
.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #ccc;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  background-color: #f5f5f5; /* 添加浅灰色背景 */
}

.plus-icon {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 日期选择器 */
.picker-text {
  font-size: 28rpx;
  color: #333;
  text-align: right; /* 文字居右 */
}

.picker-text.placeholder {
  color: #999;
}

/* 时间段选择 */
.time-slot-wrap {
  display: flex;
  flex-direction: row;
}

.time-slot {
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  justify-content: flex-end; /* 使时间段按钮靠右 */
}

.time-slot.active {
  border-color: #007aff;
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
}

/* 底部按钮组 - 居中缩小版 */
.btn-group-centered {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 40rpx 0;
}

/* 修改按钮样式 */
.btn-small {
  width: 100rpx;
  height: 50rpx;
  line-height: 28rpx;
  text-align: center;
  border-radius: 35rpx; /* 圆角按钮 */
  font-size: 24rpx;
  margin: 0 20rpx;
}

.reset {
  background-color: #f0f0f0;
  color: #666;
  border: none;
}

.submit {
  background-color: #007aff;
  color: #fff;
}

/* 卡片样式 - 统一待受理、处理中、已完成的卡片样式 */
.card {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

/* 卡片头部：单号 & 状态 */
.card-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-num {
  font-size: 28rpx;
  color: #333;
}

.status {
  font-size: 28rpx;
  color: #007aff;
  font-weight: bold;
}

/* 卡片行 */
.card-row {
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.card-row .label {
  width: 160rpx;
  color: #666;
  font-size: 26rpx;
}

.card-row .desc {
  flex: 1;
  color: #333;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

/* 按钮行 */
.btn-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-end; /* 按钮靠右对齐 */
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 按钮样式 */
.action-btn {
  padding: 12rpx 25rpx;
  font-size: 26rpx;
  background-color: #f8f8f8;
  color: #666;
  border-radius: 30rpx;
  border: 1rpx solid #e0e0e0;
  margin-left: 15rpx; /* 按钮之间的间距 */
}

.action-btn.primary {
  background-color: #007aff;
  color: #fff;
  border: none;
}

/* 联系维修人员按钮 - 单独按钮时的宽度 */
.contact-btn-single {
  width: 300rpx; /* 等于两个按钮的宽度加间距 */
  text-align: center;
}

/* 时间段选择 - 使按钮居右 */
.time-slot-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-end; /* 使时间段按钮靠右 */
}

.time-slot {
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 8rpx 15rpx; /* 缩小内边距 */
  margin-right: 15rpx;
  font-size: 24rpx; /* 缩小字体 */
  color: #666;
}

/* 问题描述行样式 */
.description-row {
  flex-direction: column;
  padding: 20rpx;
  position: relative;
}
/* 字数统计提示样式 */
.desc-count {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  font-size: 22rpx;
  color: #999;
}

/* 文本域样式 */
.textarea-control-full {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 10rpx;
}

/* 上传图片区域 - 调整为水平排列在文本框下方 */
.upload-area-container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 上传按钮样式调整 */
.upload-btn {
  width: 140rpx;
  height: 140rpx;
  border: 1rpx dashed #ccc;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.plus-icon {
  font-size: 40rpx; /* 缩小加号 */
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 20rpx; /* 缩小文字 */
  color: #999;
  margin-top: 8rpx;
}

/* 已上传图片容器 */
.uploaded-images {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow-x: auto;
}

/* 图片项目样式 */
.image-item {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

/* 内容容器，减少与导航栏的间距 */
.content-container {
  flex: 1;
  margin-top: calc(6.2vh + 0rpx); /* 减小顶部间距 */
  padding: 0; /* 移除左右内边距 */
}

/* 紧急程度标签 - 用于列表中的紧急程度显示 */
.emergency-tag {
  display: inline-block;
  padding: 6rpx 15rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
  text-align: center;
  min-width: 60rpx;
}

.emergency-tag.low {
  background-color: #e8f8e8; /* 低紧急度为浅绿色 */
  color: #52c41a;
}

.emergency-tag.medium {
  background-color: #faf0e6; /* 中紧急度为浅橙色 */
  color: #fa8c16;
}

.emergency-tag.high {
  background-color: #ffe4e1; /* 高紧急度为浅红色 */
  color: #f5222d;
}