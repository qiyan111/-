/**index.wxss**/
page {
  background-color: #f6f6f6;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", STHeiti, "Microsoft Yahei", Tahoma, Simsun, sans-serif;
}

.scrollarea {
  flex: 1;
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: 110rpx;
  position: relative;
  z-index: 1;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0;
  width: 100%;
}

.page-content {
  flex: 1;
  width: 100%;
}

/* 顶部区域 */
.header {
  position: relative;
  background: transparent;
  color: white;
  height: 420rpx;
  padding-bottom: 0;
  width: 100%;
  overflow: hidden;
}

/* 顶部背景图片 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.status-bar {
  height: 44px;
}

/* 欢迎标题 */
.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  position: absolute;
  top: 44px;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 1;
}

/* 顶部通知 */
.notification {
  position: absolute;
  top: 64rpx;
  left: 30rpx;
  display: flex;
  align-items: center;
  z-index: 1;
}

.notification-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.notification-text {
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 240rpx;
}

/* 地址信息 */
.address-bar {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 150rpx;
  left: 30rpx;
  font-size: 32rpx;
  justify-content: flex-start;
  z-index: 1;
}

.address-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  opacity: 0.8;
}

.address-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  opacity: 0.8;
  max-width: 550rpx;
}

/* 背景大E */
.background-e {
  position: absolute;
  right: -30rpx;
  top: 120rpx;
  font-size: 420rpx;
  font-weight: bold;
  opacity: 0.1;
  color: white;
  transform: rotate(-15deg) translate(0, -50%);
  z-index: 0;
}



/* 功能区域 */
.function-area {
  margin: -120rpx 30rpx 30rpx;
  z-index: 2;
  position: relative;
  width: auto;
}

.function-list {
  display: flex;
  justify-content: space-around;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 19%;
  box-sizing: border-box;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.function-icon image {
  width: 45rpx;
  height: 45rpx;
}

.function-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.3;
}

/* 通知区域 */
.notice-area {
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  background-color: transparent;
  overflow: hidden;
  width: auto;
  position: relative;
}

/* 通知背景图 */
.notice-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  border-radius: 16rpx;
}

.notice-item {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 1;
}

.notice-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.notice-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.notice-title {
  font-size: 26rpx;
  color: #1989fa;
  margin-right: 10rpx;
}

.notice-content {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.notice-date {
  font-size: 22rpx;
  color: #999;
}

/* 主页内容区域 */
.main-content {
  margin: 20rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 500rpx; /* 设置最小高度，可以根据需要调整 */
}



.placeholder {
  height: 100rpx;
}

/* 保留其他页面样式 */
