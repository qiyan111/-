page {
  background: #fff;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

/* 顶部图片 */
.header-image {
  width: 700rpx;
  height: 1000rpx;
  margin: 40rpx auto -250rpx; /* 使用负边距让下面的内容上移 */
}

/* 主要内容区域 */
.content {
  width: 85%;
  display: flex;
  flex-direction: column;
  position: relative; /* 添加相对定位 */
  z-index: 1; /* 确保内容在图片上层 */
}

/* 欢迎文字 */
.welcome-text {
  margin-bottom: 15rpx;
}

.greeting {
  font-size: 40px;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 4rpx;
}

.prompt {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}

/* 小区列表 */
.community-list {
  width: 100%;
  margin-bottom: 8rpx;
}

.community-item {
  background: #f0f3fa;
  border-radius: 100rpx;
  padding: 0 40rpx;
  margin-bottom: 10rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.community-item.selected {
  background: #2b85e4;
  color: #fff;
}

/* 小区信息容器 */
.community-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.community-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-right: 16rpx; /* 名称和地址之间的间距 */
}

.community-address {
  font-size: 24rpx;
  color: #666;
  flex: 1; /* 让地址占据剩余空间 */
}

.community-item.selected .community-address {
  color: rgba(255, 255, 255, 0.9);
}

/* 确定按钮 */
.confirm-btn {
  width: 85%;
  height: 88rpx;
  line-height: 60rpx;
  background: #2b85e4;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 0;
  border: none;
  position: relative; /* 添加相对定位 */
  top: -80rpx; 
}

button::after {
  border: none;
}

/* 加载中提示样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  width: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #2b85e4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}