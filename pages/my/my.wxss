page {
  background-color: #f6f6f6;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", STHeiti, "Microsoft Yahei", Tahoma, Simsun, sans-serif;
}

.status-bar {
  height: 44px; /* 状态栏高度 */
}

.header {
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;  /* 改为透明背景 */
}

.title {
  font-size: 17px;
  font-weight: 500;
}

/* 用户卡片 - 修改设计 */
.user-card {
  position: relative;
  margin: 30rpx 24rpx;
  background: #1976D2; /* 加深的蓝色 */
  border-radius: 16rpx;
  padding: 40rpx 30rpx; /* 增加上下内边距 */
  display: flex;
  align-items: center;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(25, 118, 210, 0.3);
  height: 160rpx; /* 显式设置高度 */
}

.avatar-container {
  position: relative;
}

.avatar {
  width: 120rpx; /* 增大头像尺寸 */
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
  color: #fff;
}

.username {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx; /* 增加间距 */
}

.user-id {
  font-size: 26rpx; /* ID字体 */
  opacity: 0.8;
}

.arrow {
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.decoration-image {
  position: absolute;
  right: -20rpx;
  top: -10rpx;
  width: 240rpx;
  height: 240rpx;
  opacity: 0.5;
  transform: rotate(-10deg); /* 使图片斜放 */
}

/* 功能列表 */
.function-list {
  margin: 20rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}



.function-left {
  display: flex;
  align-items: center;
}

.function-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.function-name {
  font-size: 28rpx;
  color: #333;
}

.item-arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 如果有顶部背景图或其他设计，可能需要调整 */
.profile-header {
  background-color: #f6f6f6;  /* 与页面背景匹配 */
}

