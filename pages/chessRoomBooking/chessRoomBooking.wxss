.booking-page {
  min-height: 100vh;
  background: #fff;
}

/* 表单容器 */
.form-container {
  padding: 30rpx;
}

/* 表单标题 */
.form-title {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

.form-title text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 表单项样式 */
.form-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 50rpx;
  position: relative;
}

.label {
  width: 200rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: normal;
}

.input-container {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

/* 地点选择区域 */
.location-container {
  flex: 1;
}

.location-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.location-tag {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.location-tag.selected {
  background: #1989fa;
  color: #fff;
}

/* 时间选择器 */
.time-container {
  background-color: #f8f8f8;
  padding-left: 20rpx;
}

.time-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.datetime-picker {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #666;
}

/* 添加预约人按钮 */
.add-visitor {
  margin: 40rpx 0;
}

.add-visitor-btn {
  height: 88rpx;
  background: #f8f8f8;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 28rpx;
}

.plus {
  font-size: 28rpx;
  color: #1989fa;
  margin-left: 8rpx;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  background: #fff;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none;
}

.reset {
  background: #f5f5f5;
  color: #333;
}

.submit {
  background: #1989fa;
  color: #fff;
}

.placeholder {
  color: #999;
}

/* 添加/修改顶部标题样式 */
.status-bar {
  height: 44px; /* 状态栏高度 */
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon image {
  width: 44rpx;
  height: 44rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 添加错误提示和弹窗样式 */

/* 错误提示样式 */
.error-border {
  border: 1px solid #ff4d4f !important;
}

.error-text {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
  position: absolute;
  left: 200rpx;
  bottom: -30rpx;
}

/* 修改成功弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.success-modal {
  width: 70%;
  background: #fff;
  border-radius: 8rpx;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 34rpx;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-btn {
  background: #fff;
  color: #1989fa;
  border-radius: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border: none;
  margin: 0;
  padding: 0;
}

.auth-button {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  margin: 40rpx auto;
  border-radius: 44rpx;
  background: #1989fa;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
} 