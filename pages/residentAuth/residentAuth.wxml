<view class="auth-page">
  <!-- 自定义导航栏 -->
  <view class="header">
    <view class="back-icon" bindtap="navigateBack">
      <image src="/images/back_arrow.png" mode="aspectFit"></image>
    </view>
    <text class="title">申请住户认证</text>
  </view>

  <!-- 表单区域，移除内联样式 -->
  <view class="form-area">
    <!-- 住户类型卡片 -->
    <view class="form-card">
      <text class="label">住户类型</text>
      <view class="resident-type-options">
        <view class="resident-type-option" data-type="owner" bindtap="selectResidentType">
          <image class="radio-icon-custom" src="{{residentType === 'owner' ? '/images/radio_checked.png' : '/images/radio_unchecked.png'}}"></image>
          <text class="radio-text">业主/家属</text>
        </view>
        <view class="resident-type-option" data-type="tenant" bindtap="selectResidentType">
          <image class="radio-icon-custom" src="{{residentType === 'tenant' ? '/images/radio_checked.png' : '/images/radio_unchecked.png'}}"></image>
          <text class="radio-text">租客</text>
        </view>
      </view>
      <!-- 右侧图标占位 -->
      <view class="extra-icons">
        <!-- <image class="icon-more" src="/path/to/more_icon.png"></image> -->
        <!-- <image class="icon-target" src="/path/to/target_icon.png"></image> -->
      </view>
    </view>

    <!-- 手机号码卡片 -->
    <view class="form-card">
      <text class="label">手机号码</text>
      <input class="input" 
             type="number" 
             placeholder="请输入管理处预留手机号码" 
             placeholder-class="placeholder"
             maxlength="11"
             value="{{phoneNumber}}"
             bindinput="inputPhoneNumber"/>
    </view>

    <!-- 申请认证按钮 -->
    <view class="button-container">
      <button class="submit-btn" bindtap="applyAuth" loading="{{isLoading}}">申请认证</button>
    </view>
  </view>

</view> 