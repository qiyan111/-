/* 页面容器 */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f6f6f6;
}

/* 顶部状态栏 */
.status-bar {
  background: #ffffff;
  height: 44px;
}

/* 顶部标题 - 修改后的样式 */
.header {
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
  background: #ffffff;
}

.title {
  font-size: 17px;
  font-weight: 500;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 30rpx;
}

/* 区块标题 */
.section-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

/* 活动卡片网格 */
.activity-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: 180rpx 180rpx;
  gap: 20rpx;
  padding: 0 30rpx;
}

/* 活动卡片基础样式 */
.activity-card {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 第三个卡片（我的预约）占满宽度 */
.activity-card:nth-child(3) {
  grid-column: 1 / -1; /* 跨越所有列 */
}

/* 卡片内容 */
.card-content {
  position: relative;
  z-index: 1;
  padding: 30rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 卡片背景图 */
.card-bg-image {
  position: absolute;
  top: 50%;
  right: 0;
  width: 50%;
  height: 50%;
  z-index: 0;
  transform: translate(0, -50%);
  opacity: 0.8;
}

/* 卡片标题 */
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

/* 卡片副标题 */
.card-subtitle {
  font-size: 24rpx;
  color: #666;
}

.placeholder-text {
  font-size: 16px;
  color: #999;
}

/* 棋牌室预约卡片 */
.activity-card:nth-child(1) {
  background-color: #e1f5fe;
}

/* 组团约局卡片 */
.activity-card:nth-child(2) {
  background-color: #fff8e1;
}

/* 我的预约卡片 */
.activity-card:nth-child(3) {
  background-color: #fce4ec;
} 