.parking-query {
  background: #f5f5f5;
  min-height: 100vh;
}


.header {
  background: #1989fa;
  padding: 0;
  padding-top: 7vh;
  padding-bottom: 20rpx;
  color: white;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.back-icon {
  position: absolute;
  left: 30rpx;
  font-size: 40rpx;
  top: calc(7vh + 4rpx);
  opacity: 0.5;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.info-card {
  margin: 20rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  font-size: 28rpx;
  line-height: 50rpx;
}

.highlight {
  color: #1989fa;
  font-weight: bold;
}

.purchase-card {
  margin: 20rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.purchase-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.purchase-button .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.value-wrapper {
  display: flex;
  align-items: center;
}

/* 添加新的空白卡片样式 */
.empty-card {
  margin: 20rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 500rpx; /* 设置最小高度，可以根据需要调整 */
} 
