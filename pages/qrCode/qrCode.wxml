<view class="qrcode-page">
  <!-- 顶部标题栏 -->
  <view class="header">
    <view class="back-icon" bindtap="navigateBack">
      <image src="/images/back_arrow.png" mode="aspectFit"></image>
    </view>
    <text class="title">一码通</text>
  </view>
  
  <!-- 二维码显示区域 -->
  <view class="qrcode-container">
    <view class="error-message" wx:if="{{errorMsg}}">{{errorMsg}}</view>
    
    <!-- 授权按钮 -->
    <button 
      wx:if="{{showAuthButton}}" 
      class="auth-button" 
      type="primary" 
      bindtap="handleAuth">
      点击授权使用
    </button>
    
    <!-- 加载状态 -->
    <view wx:elif="{{isLoading}}" class="loading">
      <view class="loading-spinner"></view>
      <text>正在加载二维码...</text>
    </view>
    
    <!-- 二维码显示 -->
    <view wx:else class="qrcode-wrapper">
      <image class="qrcode-image" src="{{qrCodeUrl}}" mode="aspectFit"></image>
    </view>
  </view>
</view>