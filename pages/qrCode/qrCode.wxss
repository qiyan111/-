.qrcode-page {
  background: #ffffff;
  min-height: 100vh;
}

/* 顶部导航栏 */
.header {
  background: #ffffff;
  padding: 0;
  padding-top: 7vh;
  padding-bottom: 20rpx;
  color: #333;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.back-icon-wrapper {
  position: absolute;
  left: 20rpx;
  top: calc(7vh - 10rpx);
  padding: 20rpx;
  z-index: 100;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  opacity: 0.8;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-left: 80rpx;
  margin-right: 80rpx;
}

.share-icon {
  position: absolute;
  right: 20rpx;
  top: calc(7vh - 10rpx);
  padding: 20rpx;
  z-index: 100;
}

.share-icon .iconfont {
  font-size: 40rpx;
  color: #333;
  opacity: 0.8;
}

/* 二维码显示区域 */
.qrcode-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  margin-top: 20rpx;
}

.qrcode-wrapper {
  width: 600rpx;
  height: 600rpx;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
}

.qrcode-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 32rpx;
}

.qrcode-tip {
  font-size: 24rpx;
  margin-top: 20rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
} 
/* 在原有样式基础上添加以下样式 */

/* 倒计时样式 */
.countdown {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666;
}

/* 刷新按钮样式 */
.refresh-btn {
  margin-top: 30rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #07c160;
  border-radius: 40rpx;
}

/* 错误提示样式 */
.error-wrapper {
  padding: 40rpx;
  text-align: center;
}

.error-msg {
  font-size: 28rpx;
  color: #ff5252;
  margin-bottom: 30rpx;
  display: block;
}

/* 二维码图片样式 */
.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
}

.auth-button {
  margin: 20rpx;
  width: 80%;
  background-color: #07c160;
  color: white;
}

.error-message {
  color: #ff4d4f;
  text-align: center;
  margin: 20rpx;
  font-size: 28rpx;
}