/* 整个页面容器，预留顶部空间防止被系统状态栏挡住，可根据实际需求调整 */
.container {
  padding: 6.2vh 5% 0 5%; /* 上方10vh，左右各5% */
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f8f8f8;
}

/* Header区域：返回箭头与导航栏 */
.header {
  position: relative;
  width: 100%;
  margin-bottom: 20rpx;
}

/* 左上角返回箭头 */
.back-arrow {
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx;
  font-size: 36rpx;
  color: #333;
  z-index: 10;
}

/* 导航栏：4个等宽项目 */
.nav-box {
  margin-top: 70rpx; /* 为返回箭头留出空间 */
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666;
}

.nav-item.active {
  color: #007aff;
  border-bottom: 2rpx solid #007aff;
}

/* 主体内容 */
.content {
  flex: 1;
  margin-top: 20rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06);
}

/* 卡片头部：单号 & 状态 */
.card-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.order-num {
  font-size: 30rpx;
  color: #333;
}

.status {
  font-size: 30rpx;
  color: #007aff;
}

/* 卡片行 */
.card-row {
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.label {
  width: 160rpx;
  color: #333;
  font-size: 28rpx;
}

.desc {
  flex: 1;
  color: #666;
  font-size: 28rpx;
}

/* 紧急程度图片 */
.emergency-icon {
  width: 50rpx;
  height: 30rpx;
  object-fit: contain;
}

/* 按钮行 */
.btn-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.btn {
  margin-right: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 8rpx;
  border: none;
}
