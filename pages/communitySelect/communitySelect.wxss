page {
  background-color: #ffffff;
}

.community-select {
  padding: 0 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部插图样式 */
.header-image-container {
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}

.header-image {
  width: 500rpx;
  height: 500rpx;
}

/* 欢迎文字样式 */
.welcome-text {
  margin-bottom: 40rpx;
  text-align: center;
}

.greeting {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.prompt {
  font-size: 34rpx;
  color: #333;
  display: block;
}

/* 小区列表样式 */
.community-list {
  width: 100%;
  margin-bottom: 60rpx;
}

.community-item {
  background: #f0f3fa;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

/* 蓝色按钮样式 - 第一个小区 */
.blue-button {
  background: #2b85e4;
  color: white;
  border-radius: 100rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.blue-button .community-name {
  font-size: 32rpx;
  font-weight: 500;
}

.blue-button .community-address {
  color: rgba(255, 255, 255, 0.9);
  margin-left: 16rpx;
}

.community-name {
  font-size: 30rpx;
  font-weight: 500;
}

.community-address {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

/* 确定按钮样式 */
.btn-container {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  width: 100%;
}

.confirm-btn {
  width: 240rpx;
  background-color: #2b85e4;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  padding: 16rpx 0;
}

button::after {
  border: none;
} 