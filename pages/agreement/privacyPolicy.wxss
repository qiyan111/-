/* pages/agreement/privacyPolicy.wxss */
.container {
  display: flex;
  flex-direction: column; /* 垂直布局 */
  height: 100vh; /* 撑满屏幕高度 */
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 20rpx 30rpx; /* 上下内边距和左右内边距 */
  flex-shrink: 0; /* 防止标题被压缩 */
}

.content-scroll {
  flex: 1; /* 占据剩余空间 */
  overflow-y: auto; /* 允许垂直滚动 */
  padding: 0 30rpx 30rpx 30rpx; /* 内容区域的左右和底部内边距 */
  box-sizing: border-box;
}

.content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.content text {
  white-space: pre-wrap; /* 保留文本中的换行和空格 */
}