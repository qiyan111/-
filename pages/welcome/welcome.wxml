<view class="welcome-page">
  <!-- 状态栏占位 -->
  <view class="status-bar"></view>
  
  <!-- 页面内容 -->
  <view class="content">
    <!-- 顶部插图和用户图标 -->
    <view class="illustration-container">
      <image class="user-icon" src="/images/user-icon.png" mode="aspectFit"></image>
    </view>
    
    <!-- 欢迎文字 -->
    <view class="welcome-text">
      <text class="greeting">你好~</text>
      <text class="intro">欢迎来到智慧物业小程序！</text>
    </view>
    
    <!-- 身份选择按钮 -->
    <view class="button-group">
      <button class="login-btn owner-login" bindtap="ownerLogin">业主登录</button>
    </view>

    <!-- 隐私协议区域 (调整为单行布局) -->
    <view class="privacy-agreement">
      <checkbox-group bindchange="handlePrivacyChange" class="privacy-checkbox-group">
        <checkbox value="agree" checked="{{isPrivacyAgreed}}" class="privacy-checkbox"></checkbox>
      </checkbox-group>
      <view class="privacy-text-links">
        <text class="privacy-text">我已阅读并同意</text>
        <navigator url="/pages/agreement/agreement" class="privacy-link">《用户服务协议》</navigator>
        <text class="privacy-text">和</text>
        <navigator url="/pages/agreement/privacyPolicy" class="privacy-link">《隐私政策》</navigator>
      </view>
    </view>

  </view>
</view> 