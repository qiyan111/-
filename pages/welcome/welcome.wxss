page {
  height: 100%;
  background-color: #ffffff;
}

.welcome-page {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
}

.status-bar {
  height: 0px;
  width: 100%;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.illustration-container {
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-icon {
  width: 500rpx;
  height: 500rpx;
}

.welcome-text {
  width: 85%;
  margin-bottom: 80rpx;
  text-align: left;
}

.greeting {
  font-size: 45rpx;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 4rpx;
}

.intro {
  font-size: 45rpx;
  font-weight: bold;
  color: #000;
  display: block;
}

.button-group {
  width: 85%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.owner-login {
  background-color: #1989fa;
  color: #ffffff;
}

.admin-login {
  background-color: #eef5fe;
  color: #1989fa;
} 