.door-control-page {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.header {
  background: #ffffff;
  padding: 0;
  padding-top: 7vh;
  padding-bottom: 20rpx;
  color: #333;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.back-icon-wrapper {
  position: absolute;
  left: 20rpx;
  top: calc(7vh - 10rpx);
  padding: 20rpx;
  z-index: 100;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
}

.back-icon image {
  width: 44rpx;
  height: 44rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-left: 80rpx;
  margin-right: 80rpx;
}

/* 门控制卡片 */
.door-control-card {
  margin: 20rpx;
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.door-icon {
  display: inline-block;
  vertical-align: middle;
}

.door-icon image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.door-title {
  font-size: 30rpx;
  color: #333;
  vertical-align: middle;
}

.door-buttons {
  display: flex;
  margin-top: 20rpx;
}

.door-button {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  margin: 0 10rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.door-close {
  background: #e0e0e0;
  color: #333;
}

.door-open {
  background: #1989fa;
  color: white;
}

/* 监控卡片 */
.camera-card {
  margin: 20rpx;
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  margin-bottom: 20rpx;
}

.card-icon {
  display: inline-block;
  vertical-align: middle;
}

.card-icon image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.card-title {
  font-size: 30rpx;
  color: #333;
  vertical-align: middle;
}

/* 监控列表 */
.camera-item {
  margin-bottom: 20rpx;
}

.camera-preview {
  position: relative;
  height: 200rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.play-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 70%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-button image {
  width: 60rpx;
  height: 80rpx;
}

.fullscreen-button {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.fullscreen-button image {
  width: 100%;
  height: 100%;
  opacity: 0.7;
}

.camera-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
} 