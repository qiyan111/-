.visitor-page {
  min-height: 100vh;
  background: #fff;
}

/* 顶部导航栏 */
.header {
  background: #fff;
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  padding-top: 44px;
  position: relative;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
}

.back-icon image {
  width: 32rpx;
  height: 32rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: normal;
}

/* 表单容器 */
.form-container {
  padding: 20rpx 30rpx;
}

/* 表单标题 */
.form-title {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

.form-title text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 表单项样式 */
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: normal;
}

.input-container {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.input {
  flex: 1;
  height: 44rpx;
  font-size: 28rpx;
  padding: 0;
}

/* 来访时间样式 */
.time-container {
  background-color: #f8f8f8;
  padding-left: 20rpx;
}

.time-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.datetime-picker {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #999;
}

/* 拜访地点样式 */
.location-container {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.location-item {
  flex: 1;
  height: 80rpx;
}

.dropdown-icon {
  width: 100%;
  height: 60rpx;
  background: #f5f5f5;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.location-label {
  font-size: 28rpx;
  color: #333;
}

.dropdown-icon image {
  width: 20rpx;
  height: 20rpx;
}

/* 来访原因样式 */
.reason-item {
  align-items: flex-start;
  margin-top: 10rpx;
}

.textarea-container {
  flex: 1;
  position: relative;
  height: 160rpx;
  background: #f8f8f8;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
}

.textarea {
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  padding: 0;
}

.word-count {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* 添加访客按钮 */
.add-visitor {
  margin: 40rpx 0;
}

.add-visitor-btn {
  height: 88rpx;
  background: #f8f8f8;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 28rpx;
}

.plus {
  font-size: 28rpx;
  color: #1989fa;
  margin-left: 8rpx;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  background: #fff;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none;
}

.reset {
  background: #f5f5f5;
  color: #333;
}

.submit {
  background: #1989fa;
  color: #fff;
}

.placeholder {
  color: #999;
} 