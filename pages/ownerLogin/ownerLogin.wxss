page {
  height: 100%;
  background-color: #ffffff;
}

.login-page {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
}

.status-bar {
  height: 44px;
  width: 100%;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 120rpx 30rpx 0;
  box-sizing: border-box;
}

.illustration-container {
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-icon {
  width: 500rpx;
  height: 500rpx;
}

.login-text {
  width: 85%;
  margin-bottom: 60rpx;
  text-align: left;
}

.greeting {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 4rpx;
}

.intro {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
  display: block;
}

.login-form {
  width: 85%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-item {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background-color: #1989fa;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  margin-top: 60rpx;
}

/* 密码输入框的眼睛图标按钮 */
.password-toggle {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}

.password-toggle image {
  width: 40rpx;
  height: 40rpx;
} 